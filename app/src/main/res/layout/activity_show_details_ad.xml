<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:fillViewport="true">
    <!--****************************************************-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--****************************************************-->

             <LinearLayout
                android:id="@+id/linear_delete_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:visibility="gone"
                 android:layout_alignParentTop="true">

                <Button
                    android:id="@+id/btn_delete_ad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:text="حذف"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    />

                <Button
                    android:id="@+id/btn_edit_ad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"                    android:text="ویرایش"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        <!--*******************************************************-->
        <com.daimajia.slider.library.SliderLayout
            android:layout_below="@id/linear_delete_edit"
                    android:id="@+id/slider_image_ad"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:slider_defaultBanner="5"
                    app:slider_loopSlides="true" />

    <!--*********************************************************-->
    <LinearLayout
        android:id="@+id/linesr_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        app:layout_anchor="@id/slider_image_ad"
        app:layout_anchorGravity="bottom|center"
        android:layout_marginTop="260dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin"
        >
        <!--******************************-->
        <TextView
            android:id="@+id/ad_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="قیمت به تومان"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
           android:textDirection="rtl"
           android:textAlignment="center"
           android:textStyle="bold"
           android:layout_marginTop="@dimen/standard_margin"
           android:layout_marginBottom="@dimen/standard_margin"/>
        <!--**********************************-->
        <TextView
            android:id="@+id/ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:gravity="center"
            android:text="عنوان آگهی در اینجا درج می شود"
            android:textColor="#1a1616"
            android:textSize="18dp"
            android:textDirection="rtl"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin" />
        <!--*********************************-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
             />
        <!--*********************************************************-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ad_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="@dimen/standard_margin"
                android:gravity="center_horizontal"
                android:text="استان، شعر"
                android:textColor="#FF1A1616"
                android:textSize="16dp"
                android:layout_marginRight="@dimen/standard_margin"
                android:padding="@dimen/standard_margin"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
             />
            <TextView
                android:id="@+id/ad_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="@dimen/standard_margin"
                android:gravity="center_horizontal|center_vertical"
                android:text="کالا یا خدمات قابل فروش"
                android:textColor="#FF1A1616"
                android:textSize="16dp"
                android:layout_marginRight="@dimen/standard_margin"
                android:padding="@dimen/standard_margin"
                />
        </LinearLayout>
        <!--********************************************-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
             />

        <!--************************************************-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--*******-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:layout_margin="@dimen/standard_margin"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:padding="@dimen/standard_margin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite"
                        />
                    <TextView
                        android:id="@+id/txt_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="15"
                        android:textSize="16dp"
                        android:paddingRight="3dp"/>
                </LinearLayout>
                <!--****************-->
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    />
                <!--****************-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:layout_margin="@dimen/standard_margin"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:padding="@dimen/standard_margin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_visibility_black_24dp"
                        />
                    <TextView
                        android:id="@+id/txt_visibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingRight="3dp"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--***************-->
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"

                    />
                <!--***************-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="@dimen/standard_margin"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:padding="@dimen/standard_margin">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_timer"
                    />
                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="15"
                        android:paddingRight="3dp"/>
                </LinearLayout>
            </LinearLayout>
        <!--********************************************************************-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="#8f8e8e"
            />
        <!--*********************************************************-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:gravity="right"
            android:text="آدرس دقیق:"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textDirection="rtl"
            android:textStyle="bold"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/ad_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:gravity="right"
            android:text="آدرس دقیق"
            android:textSize="16dp"
            />
            </LinearLayout>
        <!--************************************************-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="#8f8e8e"
            />
        <!--**********************************-->
        <TextView
            android:id="@+id/ad_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:gravity="right"
            android:text="توضیخات برنامه"
            android:textSize="16dp"
            />
        <!--**********************************-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="#8f8e8e"
             />
        <!--**********************************-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:gravity="bottom|right"
            android:layout_gravity="bottom"
            android:text="لطفا خرید خود را فقط به صورت حضوری انجام دهید و پیش از آن هیچ مبلغی را واریز نکنید .\n\n"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floaBtn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@android:drawable/stat_sys_phone_call"
        android:layout_margin="20dp"
        android:onClick="floatingCall_setOnClickListener"
        app:layout_anchor="@id/linesr_data"
        app:layout_anchorGravity="bottom|left"
        />
 </android.support.design.widget.CoordinatorLayout>
